<resources>

    <!-- Base application theme.  Theme.AppCompat.Light.NoActionBar -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/buttonColor</item>
        <item name="android:textColorPrimaryInverse">@android:color/holo_red_dark</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:titleTextStyle">@style/CustomColorTextBar</item>

        <item name="android:actionBarStyle">@style/AppBaseTheme.ActionBarStyle</item>




    </style>






    <style name="AppBaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@android:color/background_dark</item>
        <item name="colorPrimary">@color/ToolbarColor</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/buttonColor</item>
        <item name="android:windowBackground">@color/BackgroundColor</item>
        <item name="android:titleTextStyle">@style/CustomColorTextBar</item>
    </style>

    <style name="AppBaseTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBaseTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />





    <style name="AppBaseTheme.ActionBarStyle" parent="AppBaseTheme">
        <item name="android:titleTextStyle">@style/AppBaseTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppBaseTheme.ActionBar.TitleTextStyle" parent="AppBaseTheme">
        <item name="android:textColor">@color/BackgroundColor</item>
    </style>
