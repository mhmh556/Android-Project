<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_event_datil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alarayf.alarayf.Event_datil"
    tools:showIn="@layout/activity_event_datil"
    android:padding="20dp">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:alpha="0.9"
        android:background="@drawable/textviewstyle"
        android:gravity="center"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textDirection="anyRtl"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:alpha="0.8"
        android:background="@drawable/textviewstyle"
        android:gravity="right"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textDirection="anyRtl"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:alpha="0.8"
        android:background="@drawable/textviewstyle"
        android:gravity="center"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textDirection="anyRtl"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="التعليقات"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:background="@drawable/custombutton"
        android:textColor="@android:color/white"
        android:onClick="comments_BtnClicked"/>
</LinearLayout>
