<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="100"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alarayf.alarayf.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/instagramBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@drawable/instagram"
                android:gravity="top|right"
                android:onClick="instagramBtnClicked" />

            <Button
                android:id="@+id/twitterBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@drawable/twitteriogo"
                android:gravity="top|left"
                android:onClick="twitterBtnClicked" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="1"

        >

        <Button
            android:id="@+id/btn_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/custombutton"
            android:text="تطبيق العرايف الرسمي"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:onClick="Vote_btn_clicked"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="2"

            >

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:text="المناسبات"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:onClick="Btn2_clicked"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:text="إضافة مناسبة"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:layout_marginBottom="5dp"
                android:onClick="Btn1_clicked"
                android:layout_marginRight="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="2"

            >

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:text="شجرة الشوايبة"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:onClick="Btn4_clicked"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:text="الأخبار"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:onClick="Btn3_clicked"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="2"

            >

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:text="الفيديو"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:layout_marginBottom="5dp"
                android:onClick="Btn6_clicked"
                android:layout_marginLeft="5dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:text="صور تاريخية"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:layout_marginBottom="5dp"
                android:onClick="Btn5_clicked"
                android:layout_marginRight="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="2"

            >

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:onClick="Btn8_clicked"
                android:text="إستشارات"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:text="تواصل معنا"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:layout_marginBottom="5dp"
                android:onClick="Btn7_clicked"
                android:layout_marginRight="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="vertical">

        </LinearLayout>




</LinearLayout>

